{
  "name": "auction-web",
  "version": "1.0.0",
  "description": "Auction web backend using Prisma and Typescript",
  "main": "app.ts",
  "scripts": {
    "test": "set NODE_ENV=test && npx jest --runInBand",
    "dev": "npx nodemon -r tsconfig-paths/register ./app.ts",
    "prisma-reset": "npx prisma migrate reset && npx ts-node ./prisma/seeders",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "npx prettier --ignore-unknown --write .",
    "prepare": "cd .. && husky backend/.husky"
  },
  "author": "gnoya",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.12.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-fileupload": "^1.5.0",
    "jsonwebtoken": "^9.0.2",
    "pm2": "^5.3.1",
    "prisma": "^5.12.1",
    "ramda": "^0.29.1",
    "socket.io": "^4.7.5",
    "ts-node": "^10.9.2",
    "tslog": "^3.3.4",
    "tsx": "^4.7.2",
    "typescript": "^5.4.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.5.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.5",
    "@types/ramda": "^0.29.12",
    "@types/socket.io": "^3.0.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.1",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "tsconfig-paths": "^4.2.0"
  }
}
